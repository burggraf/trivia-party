{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "trivia-party",
  "version": "0.0.1",
  "identifier": "com.azabab.triviaparty",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Trivia Party",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["ios"],
    "identifier": "com.azabab.triviaparty",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "ios": {
    "developmentTeam": "HEGN9W2S9J"
  }
}