{
	"name": "svelte5-starter",
	"version": "0.9.5",
	"identifier": "com.svelte5starter.app",
	"description": "Svelte 5 Starter with Supabase",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host 0.0.0.0",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"ios": "npm run build && npx cap sync && npx cap update ios && npx cap copy ios && npx cap run ios",
		"ios-reload": "cap run ios -l --external --port=5173",
		"android": "npm run build && npx cap sync && npx cap update android && npx cap copy android && npx cap run android",
		"android-reload": "cap run android -l --external --port=5173",
		"tauri:dev": "tauri dev",
		"tauri:build": "tauri build",
        "version": "node scripts/sync-version.js && git add src-tauri/tauri.conf.json src-tauri/Cargo.toml" // <-- Add this line
	},
	"devDependencies": {
		"@capacitor/cli": "^6.1.2",
		"@internationalized/date": "^3.8.0",
		"@lucide/svelte": "^0.488.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/kit": "^2.8.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/node": "^22.8.5",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^1.3.19",
		"clsx": "^2.1.1",
		"embla-carousel-svelte": "^8.6.0",
		"formsnap": "^2.0.1",
		"lucide-svelte": "^0.454.0",
		"mode-watcher": "^0.4.1",
		"paneforge": "^1.0.0-next.5",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-sonner": "^0.3.28",
		"sveltekit-superforms": "^2.24.1",
		"tailwind-merge": "^2.5.4",
		"tailwind-variants": "^0.2.1",
		"tailwindcss": "^3.4.9",
		"tailwindcss-animate": "^1.0.7",
		"tailwindcss-safe-area-capacitor": "^0.5.1",
		"typescript": "^5.0.0",
		"vaul-svelte": "^1.0.0-next.7",
		"vite": "^5.0.3",
		"zod": "^3.24.2"
	},
	"dependencies": {
		"@capacitor-community/safe-area": "^6.0.0-alpha.8",
		"@capacitor/android": "^6.1.2",
		"@capacitor/core": "^6.1.2",
		"@capacitor/ios": "^6.1.2",
		"@supabase/supabase-js": "^2.46.1",
		"@types/node-forge": "^1.3.11",
		"cropperjs": "^1.6.2",
		"html2pdf.js": "^0.10.2",
		"maplibre-gl": "^4.7.1",
		"node-forge": "^1.3.1",
		"suneditor": "^2.47.0"
	}
}